{
    "env": {
        "myDefaultIncludePath": [
            "${workspaceFolder}/src/**",
            "${workspaceFolder}/src/series1/**",
            "/usr/local/boost_1_84_0/**"
        ]
    },
    "configurations": [
        {
            "name": "Linux Default",
            "intelliSenseMode": "linux-gcc-x64",
            "includePath": [
                "${myDefaultIncludePath}",
                "${workspaceFolder}/src/boost/boost/hof",
                "${workspaceFolder}/**",
                "/usr/include/**",
                "/usr/local/include/**",
                "/usr/include/c++/11", // or the your compiler version
                "/usr/include/x86_64-linux-gnu" // for 64-bits linux system           
            ],
            "cStandard": "c17",
            "cppStandard": "c++20",
            "browse": {
                "path": [
                    "${workspaceFolder}/src"
                ],
                "limitSymbolsToIncludedHeaders": true,
                "databaseFilename": ""
            },
            "configurationProvider": "ms-vscode.makefile-tools"
        }
    ],
    "version": 4
}